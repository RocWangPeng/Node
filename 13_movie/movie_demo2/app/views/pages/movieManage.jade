extends ../layout
block content
  .container
    .row
      form.form-horizontal(method="post",action="/admin/movie/add",enctype="multipart/form-data")
        //- hiden input??? pass the value
        .form-group
          label.col-sm-2.control-label(for="douban") 豆瓣同步
          div.col-sm-10
            input#douban.form-control(type="text", placeholder="豆瓣电影ID" value="25777636")
        if movie._id
          input(type="hidden", name="movie[_id]", value=movie._id)
        .form-group
          label.col-sm-2.control-label 电影分类
          div.col-sm-10
            input#categoryName.form-control(type="text", placeholder="填写新分类" name="movie[categoryName]", value=movie.categoryName)
        .form-group
          label.col-sm-2.control-label 选择分类
          each cat in categories
            label.radio-inline
              if movie.category
                input(type="radio",name="movie[category]",value=cat._id,checked=cat._id.toString()==movie.category.toString())
                | #{cat.name}
              else
                input(type="radio",name="movie[category]",value=cat._id)
                | #{cat.name}
        .form-group
          label.col-sm-2.control-label(for="title") 电影名字
          div.col-sm-10
            input#title.form-control(type="text", name="movie[title]", value=movie.title)
        .form-group
          label.col-sm-2.control-label(for="director") 导演
          div.col-sm-10
            input#director.form-control(type="text", name="movie[director]", value=movie.director)
        .form-group
          label.col-sm-2.control-label(for="year") 上映年份
          div.col-sm-10
            input#year.form-control(type="text", name="movie[year]", value=movie.year)
        .form-group
          label.col-sm-2.control-label(for="country") 国家
          div.col-sm-10
            input#country.form-control(type="country", name="movie[country]", value=movie.country)
        .form-group
          label.col-sm-2.control-label(for="language") 语言
          div.col-sm-10
            input#language.form-control(type="text", name="movie[language]", value=movie.language||'英语')
        .form-group
          label.col-sm-2.control-label(for="poster") 封面
          div.col-sm-10
            input#poster.form-control(type="text", name="movie[poster]", value=movie.poster)
        .form-group
          label.col-sm-2.control-label(for="uploadPoster") 封面
          div.col-sm-10
            input#uploadPoster(type="file", name="uploadPoster")
        .form-group
          label.col-sm-2.control-label(for="flash") 视频地址
          div.col-sm-10
            input#flash.form-control(type="text", name="movie[flash]", value=movie.flash||'http://player.youku.com/player.php/sid/XMTMzNzcyMjA4OA==/v.swf')
        .form-group
          label.col-sm-2.control-label(for="summary") 简介
          div.col-sm-10
            input#summary.form-control(type="text", name="movie[summary]", value=movie.summary)
        .form-group
          .col-sm-offset-2.col-sm-10
            button.btn.btn-default(type="submit") 录入
  script(src="/assets/js/main.js")